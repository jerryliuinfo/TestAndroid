<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apache.android.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_md5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test md5"
        />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test download"
        />

    <Button
        android:id="@+id/btn_aidl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test aidl"
        />

    <Button
        android:id="@+id/btn_thread_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test 线程池"
        />


    <Button
        android:id="@+id/btn_custom_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test 自定义WorkTask"
        />
</LinearLayout>
